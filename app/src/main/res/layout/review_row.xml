<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/row_review_cv"
  android:layout_width="match_parent"
  android:layout_height="80dp"
  android:layout_marginBottom="8dp"
  android:layout_marginLeft="16dp"
  android:layout_marginRight="16dp"
  android:layout_marginTop="8dp"
  app:cardCornerRadius="6dp"
  app:cardElevation="4dp"
  app:cardPreventCornerOverlap="true">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RatingBar
      android:id="@+id/review_rating_iv"
      style="?android:attr/ratingBarStyleSmall"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="6dp"
      android:max="5"
      android:rating="5"
      android:scaleX=".75"
      android:scaleY=".75"
      android:transformPivotX="0dp"
      android:transformPivotY="0dp"/>


    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toEndOf="@id/review_rating_iv">

      <TextView
        android:id="@+id/reviewer_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        tools:text="name"/>

      <TextView
        android:id="@+id/review_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewer_name_tv"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="10dp"
        android:textSize="12sp"
        tools:text="title"/>

      <TextView
        android:id="@+id/reviewer_country_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/review_title_tv"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        tools:text="country"/>


      <TextView
        android:id="@+id/review_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/review_title_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="6dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        tools:text="date"/>

    </RelativeLayout>


    <android.support.v7.widget.AppCompatImageView
      android:id="@+id/review_language_iv"
      android:layout_width="32dp"
      android:layout_height="match_parent"
      android:layout_alignParentRight="true"
      android:layout_marginRight="6dp"
      android:adjustViewBounds="true"
      android:rotation="90"
      app:srcCompat="@drawable/ic_flag_uk"/>
  </RelativeLayout>
</android.support.v7.widget.CardView>